<div class="my-bm-container">
<h1>Offer a Room</h1>
<%= simple_form_for(@movie) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="form-inputs">
    <%= f.input :roommates %>
    <%= f.input :size %>
    <%= f.input :poster_url %>
    <%= f.input :address %>
    <%= f.input :city %>
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <%= f.input :pets %>
    <%= f.input :smoking %>
    <%= f.input :visitors %>
    <%= f.input :description %>
    <%= f.input :floor %>
    <%= f.input :price %>
    <%= f.input :status %>
    <%= f.input :utilities %>
    <%= f.input :heart %>
  </div>
  <div class="form-actions" style="padding-bottom: 30px">
    <%= f.button :submit, class: 'btn btn-outline-dark' %>
  </div>
<% end  %>
  </div>
</div>
