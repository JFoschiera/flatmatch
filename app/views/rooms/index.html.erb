<div class="search-bar d-flex justify-content-center mt-2">
  <div class="form-search">
    <%= form_tag "/rooms#map", method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Which city you need a room?"
    %>
  </div>

  <div class="search-button">
    <%= submit_tag "Search", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<div class="d-flex justify-content-center mt-2">

  <div id="map" style="height: 80vh; width: 90%" data-controller="mapbox"
    data-mapbox-markers-value="<%= @markers.to_json %>" data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>

<div class="container text-center ">
  <div class="row justify-content-center">
    <div class="col-6">

      <h1 class="container mt-4">Rooms</h1>
      <h4 style="padding: 30px"><%= link_to 'Offer Room', new_room_path %></h4>



      </div>
    </div>
  </div>
</div>
<%= render "shared/room_cards", rooms: @rooms %>
