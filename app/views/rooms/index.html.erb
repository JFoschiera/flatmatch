    <div class="form-search">
      <%= form_tag "/rooms#map", method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Which city you need a room?"
      %>
    </div>

    <div class="search-button">
      <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
    </div>

  <div id="map" style="height: 70vh; width: 90%" data-controller="mapbox"
    data-mapbox-markers-value="<%= @markers.to_json %>" data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

<div class="container text-center ">
  <div class="row justify-content-center">
    <div class="col-6">

      <h1 class="container mt-5">Rooms</h1>
      <h4 style="padding: 30px"><%= link_to 'Offer Room', new_room_path %></h4>

      <div class="container">
        <div class="row">

          <% @rooms.each do |room| %>
          <div class=" col">
            <h5><%= room.address %></h5>
            <p><%= room.city %></p>
            <p><%= room.price %></p>
            <%= link_to 'Check Room', room_path(room) %>
          </div>
          <% end %>
          <div class="btn-index-fix-margin">

          </div>
        </div>
      </div>
    </div>
  </div>
</div>

