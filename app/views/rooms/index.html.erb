<div class="container text-center ">
  <div class="row justify-content-center">
    <div class="col-6">

      <h1 style="padding: 30px">Rooms</h1>

      <div class="container">
        <div class="row">

          <% @rooms.each do |room| %>
          <div class=" col">
            <%= link_to 'Check Room', room_path(room) %>
            <h3><% room.address %></h3>
            <p><% room.city %></p>
            <p><% room.price %></p>
          </div>
          <% end %>
          <div class="btn-index-fix-margin">
            <%= link_to 'Offer Room', new_room_path, class: 'btn btn-outline-dark' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
