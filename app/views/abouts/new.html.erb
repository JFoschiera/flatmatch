


  <div class="container">
    <div class="row">
        <div class="col text-center" style="background-color: #fff;">
          <div class="card-container my-5 mx-3 py-3 px-3" style="height: 85%; border-radius: 20px; background-color: #fff; ">



            <%= simple_form_for(@about) do |f| %>
              <%= f.error_notification %>
              <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>


              <div class="form-inputs">
                <label for="about_user" style="color: #161616; font-weight: 600;">About yourself: </label>


                <div class="mb-3"></div>
                  <%= f.input :about_user, placeholder: 'Where are you from? Yours hobbies, occupation, age. Which music you listen to? Your master dish. Be creative! :)',
                  label:false,
                  input_html: { rows: 11, class: "my-form-style px-4 py-4" } %>
                </div>

        <div class="about-btn-position">
          <div class="form-actions" style="text-align: right;">

              <%= button_tag type: 'submit', class: "btn btn-outline-light" do %>
                <i style="color: #ed3b5a;" id="about-button" class="fas fa-chevron-circle-right" aria-hidden="true"></i>
              <% end %>
              <% end %>
            </div>
          </div>
        </div>



          </div>

        </div>

    </div>
  </div>
