<div class="container map-card">

  <div class="">
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner">
        <% if room.photos.attached? %>
        <% room.photos.each_with_index do |photo, index| %>
        <div class="carousel-item <%= index.zero? ? "active" : "" %>">
          <%= cl_image_tag photo.key, class: "d-block w-100", height: 120, width: 200, crop: :fill %>
        </div>
        <% end %>
        <% else %>
        <div class="carousel-item active">
          <%= image_tag 'no-image-found.png',  height: 120, width: 220, crop: :fill %>
        </div>
        <% end %>
      </div>
    </div>
  </div>

    <div class="map-info">
      <div class="map-info-1">
        <p><strong> <%= room.address %> </strong></p>
        <%= link_to "Show more", room_url(room),  class: "btn-map" %>
      </div>
      <div class="map-info-2">
        <p class="badge rounded-pill bg-secondary map-compatibility"><%= room.compatibility %>% </p>
        <p>R$<%= room.price %></p>
      </div>
    </div>
