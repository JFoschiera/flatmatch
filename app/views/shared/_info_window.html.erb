<div class="container">

<div class="mt-3">

 <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">

  <div class="carousel-inner">

  <% if room.photos.attached? %>
      <% room.photos.each_with_index do |photo, index| %>
        <div class="carousel-item <%= index.zero? ? "active" : "" %>">
             <%= cl_image_tag photo.key, class: "d-block w-100", height: 100, width: 200, crop: :fill %>
        </div>
          <% end %>
  <% else %>


        <div class="carousel-item active">
             <%= image_tag 'no-image-found.png', height: 300, width: 400, crop: :fill %>
       </div>
  <% end %>

  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>

<div>
  <p><strong> <%= room.address %> </strong></p>
  <p> <strong> Availability from: <%= room.start_date %> </strong> </p>
  <p>price: <%= room.price %> </p>
  <%= link_to "Show more", room_url(room) %>
  </div>

