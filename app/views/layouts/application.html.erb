<!DOCTYPE html>
<html>
  <head>
    <title>Flatmatch</title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>

    <link href="https://fonts.googleapis.com/css2?family=Montserrat+Alternates:ital,wght@1,900&family=Montserrat:wght@500&family=Source+Code+Pro:wght@300&family=Space+Mono&display=swap" rel="stylesheet">
  </head>

  <body>
    <% if user_signed_in? %>
      <%= render "shared/navbar" %>
    <% end %>
    <%= yield %>
  </body>
</html>
